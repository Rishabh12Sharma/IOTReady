<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="20"
    android:orientation="vertical"
    tools:context=".Meat_Packing_Activity1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="#5C4033"
        android:layout_weight="1"
        android:textSize="40sp"
        android:padding="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="MEAT PACKING"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="PLU"
            android:layout_margin="2dp"
            android:padding="18dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="	#5C4033"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5C4033"
            android:text="1"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:padding="18dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chicken Curry Cut"
            android:layout_margin="2dp"
            android:padding="18dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="	#5C4033"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Tare"
            android:layout_margin="2dp"
            android:padding="18dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="	#5C4033"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5C4033"
            android:text="5  g"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:padding="18dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="MRP"
            android:layout_margin="2dp"
            android:padding="18dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="	#5C4033"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5C4033"
            android:text="₹299.0"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:padding="18dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:layout_margin="2dp"
            android:padding="18dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="	#5C4033"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5C4033"
            android:text="0 g"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:padding="18dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_margin="2dp"
            android:padding="18dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="	#5C4033"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5C4033"
            android:text="₹0"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:padding="18dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="140dp"

        android:orientation="horizontal"
        android:background="#5C4033"
        android:weightSum="2">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/left_arrow_symbol"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/right_arrow_symbol"/>
    </LinearLayout>
</LinearLayout>